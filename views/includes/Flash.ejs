<%if(success && success.length){%>
<div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert">
    <%=success%>
    <button type="button" class="btn-close" style="left: auto" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<%}%>
<!-- we have to check the succes.length as the success exists all the time so the alert wont go thus we needed to check the length of the success -->

<%if(deleted && deleted.length){%>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert">
        <%=deleted%>
        <button type="button" class="btn-close" style="left: auto" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <%}%>

    <%if(updated && updated.length){%>
        <div class="alert alert-warning alert-dismissible fade show col-6 offset-3" role="alert">
            <%=updated%>
            <button type="button" class="btn-close" style="left: auto" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <%}%>